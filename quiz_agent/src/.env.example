# Example .env configuration for SolviumAI Quiz Bot with FastAPI

# Telegram Bot Configuration
TELEGRAM_TOKEN=your_bot_token_here

# Environment (development/production)
ENVIRONMENT=development

# Webhook Configuration (for production deployment)
# Leave empty for polling mode (development)
WEBHOOK_URL=
WEBHOOK_LISTEN_IP=0.0.0.0
WEBHOOK_PORT=8443
WEBHOOK_URL_PATH=

# SSL Configuration (for HTTPS webhooks)
SSL_CERT_PATH=
SSL_PRIVATE_KEY_PATH=

# FastAPI Configuration
FASTAPI_HOST=0.0.0.0
FASTAPI_PORT=8000
FASTAPI_RELOAD=false
FASTAPI_WORKERS=1

# FastAPI Webhook Mode
# Set to 'true' to force FastAPI webhook mode
# Set to 'false' to force legacy webhook mode
# Leave unset for automatic detection (FastAPI in production, legacy in development)
USE_FASTAPI_WEBHOOK=

# Database Configuration
DATABASE_URL=sqlite:///./mental_maze.db

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_SSL=false
REDIS_PASSWORD=

# Other configurations...
GOOGLE_GEMINI_API_KEY=your_api_key_here
NEAR_RPC_ENDPOINT=https://free.rpc.fastnear.com
NEAR_WALLET_PRIVATE_KEY=
NEAR_WALLET_ADDRESS=
